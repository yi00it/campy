<section class="section">
  <header class="section__head">
    <div class="list-inline">
      <span class="pill">Configuration</span>
      <span class="pill pill--sunrise"><%= pluralize(@zones.count, "zone") %></span>
    </div>
    <h1 class="section__title">Manage zones</h1>
    <p class="section__lead">Zones represent building areas such as “Lobby”, “Guest rooms”, or “Service core”.</p>
  </header>

  <div class="split">
    <div class="stack">
      <% if @zones.any? %>
        <div class="activity-table-wrapper">
          <table class="activity-table" role="grid">
            <thead>
              <tr>
                <th scope="col">Zone Name</th>
                <th scope="col" class="activity-table__actions-head">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @zones.each do |zone| %>
                <tr>
                  <td class="activity-table__cell activity-table__cell--primary" data-label="Zone Name">
                    <strong><%= zone.name %></strong>
                  </td>
                  <td class="activity-table__cell activity-table__cell--actions" data-label="Actions">
                    <div class="activity-table__actions">
                      <%= link_to "Edit", edit_zone_path(zone), class: "btn btn--ghost" %>
                      <%= link_to "Delete", zone, data: { turbo_method: :delete, turbo_confirm: "Delete zone '#{zone.name}'?" }, class: "btn btn--text" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="empty-state">
          <p>No zones yet. Add the key building areas to map out the project.</p>
        </div>
      <% end %>
    </div>

    <aside class="card">
      <h2 class="section__title section__title--sm section__title--flush">Add a zone</h2>
      <%= render "form", zone: @zone %>
    </aside>
  </div>
</section>
