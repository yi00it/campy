<section class="section">
  <header class="section__head">
    <h1 class="section__title">Polish this activity</h1>
    <p class="section__lead">Adjust the details, zone, discipline, or due date. Campy keeps the Basecamp-style calm intact.</p>
  </header>

  <div class="card">
    <%= render "form", activity: @activity, project: @project, disciplines: @disciplines, zones: @zones %>
  </div>

  <div class="hero__cta mt-md">
    <%= link_to "Back to project", project_path(@project), class: "btn btn--text" %>
    <%= link_to "View activity", @activity, class: "btn btn--ghost" %>
    <%= link_to "Delete activity", @activity,
          data: { turbo_method: :delete, turbo_confirm: "Delete this activity?" },
          class: "btn btn--ghost btn--delete" %>
  </div>
</section>
