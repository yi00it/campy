<section class="section">
  <header class="section__head">
    <h1 class="section__title">Conversation</h1>
    <p class="section__lead">Chat with <%= @other_users.map(&:display_name).to_sentence %></p>
  </header>

  <div class="split">
    <div class="card conversation-window"
         data-controller="messages"
         data-messages-conversation-id-value="<%= dom_id(@conversation) %>">
      <%= turbo_stream_from @conversation %>
      <div class="conversation-messages"
           id="<%= dom_id(@conversation, :messages) %>"
           data-messages-target="list">
        <%= render @messages %>
      </div>
      <% if @can_message %>
        <%= render "messages/form", conversation: @conversation, message: @message %>
      <% else %>
        <p class="meta mt-md">Messaging is disabled for your current role.</p>
      <% end %>
    </div>

    <aside class="card">
      <h2 class="section__title section__title--sm section__title--flush">Participants</h2>
      <ul class="list-reset stack mt-md">
        <% @users.each do |user| %>
          <li><strong><%= user.display_name %></strong></li>
        <% end %>
      </ul>
      <div class="hero__cta mt-md">
        <%= link_to "Back to conversations", conversations_path, class: "btn btn--ghost" %>
      </div>
    </aside>
  </div>
</section>
