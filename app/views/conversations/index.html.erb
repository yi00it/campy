<section class="section">
  <header class="section__head">
    <h1 class="section__title">Messages</h1>
    <p class="section__lead">Start a conversation with teammates and keep collaboration flowing.</p>
  </header>

  <%= turbo_stream_from [:conversations, current_user] %>

  <div class="split">
    <div class="stack">
      <div class="card">
        <h2 class="section__title section__title--sm section__title--flush">Start a conversation</h2>
        <% if @users.any? %>
          <%= form_with url: conversations_path, method: :post, scope: :conversation, local: true do |form| %>
            <div class="field">
              <%= form.label :user_id, "Teammate" %>
              <%= form.select :user_id,
                    options_for_select(@users.map { |u| [u.display_name, u.id] }),
                    { include_blank: "Select a teammate" },
                    class: "select" %>
            </div>
            <div class="actions">
              <%= form.submit "Create", class: "btn btn--primary" %>
            </div>
          <% end %>
        <% else %>
          <p class="meta mt-md">Invite teammates to projects to start messaging.</p>
        <% end %>
      </div>
    </div>

    <aside class="card">
      <h2 class="section__title section__title--sm section__title--flush">Your conversations</h2>
      <ul class="list-reset stack mt-md" id="<%= dom_id(current_user, :conversation_list) %>">
        <% @conversations.each do |conversation| %>
          <%= render "conversations/conversation_preview", conversation: conversation, viewer: current_user %>
        <% end %>
      </ul>
      <% unless @conversations.any? %>
        <p class="meta mt-md">No conversations yet. Start one above!</p>
      <% end %>
    </aside>
  </div>
</section>
