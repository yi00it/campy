<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div class="flash">
      <p class="flash__item flash__item--warn">
        <%= pluralize(project.errors.count, "error") %> prevented saving:
        <%= project.errors.full_messages.to_sentence %>
      </p>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Project name" %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, rows: 5, placeholder: "Share the goal, scope, or promise in a friendly tone." %>
  </div>

  <div class="actions">
    <%= form.submit(project.persisted? ? "Update project" : "Create project", class: "btn btn--primary") %>
    <%= link_to "Cancel", (project.persisted? ? project : projects_path), class: "btn btn--ghost" %>
  </div>
<% end %>
