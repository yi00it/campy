<section class="section">
  <header class="section__head">
    <h1 class="section__title">Update project details</h1>
    <p class="section__lead">Tweak the description or name. Campy keeps the rest of the Basecamp-inspired calm intact.</p>
  </header>

  <div class="card">
    <%= render "form", project: @project %>
  </div>

  <div class="hero__cta mt-md">
    <%= link_to "View project", @project, class: "btn btn--ghost" %>
    <%= link_to "Back to projects", projects_path, class: "btn btn--text" %>
    <%= link_to "Delete project", @project,
                data: { turbo_method: :delete, turbo_confirm: "Delete project?" },
                class: "btn btn--text btn--delete" %>
  </div>
</section>
